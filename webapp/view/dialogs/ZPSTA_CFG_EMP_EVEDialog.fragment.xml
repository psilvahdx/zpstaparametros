<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" 
    xmlns:smartForm="sap.ui.comp.smartform" xmlns:form="sap.ui.layout.form"
	xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog id="InsertDialogEmpEve" title="{i18n>insertTitle}">
		<content>
			<smartForm:SmartForm id="formEmpEve" editable="true" entityType="ZPSTA_CFG_EMP_EVE">
				<smartForm:Group id="detailGroup">
					<smartForm:GroupElement label="CodigoEmpresa">
						<ComboBox selectedKey="{CodEmpresa}" id="empresa" required="true" placeholder="Selecione a empresa:"
							items="{/OZPSTA_CFG_EMPRES}">
							<core:Item key="CodEmpresa" text="{CodEmpresa} - {NomeEmpresa}"/>	
						</ComboBox>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{CodEveNegocio}" id="evento_negocio"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{DescEveNegocio}" id="descricao_evento_negocio"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="Script">
						<ComboBox selectedKey="{Script}" id="script" required="true"  placeholder="Selecione a origem:"
							items="{/OZPSTA_CFG_ORIGENS}">
							<core:Item key="Script" text="{Script}"/>	
						</ComboBox>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="Table" >
						<ComboBox selectedKey="{Table}" id="table" required="true" placeholder="Selecione a tabela:"
							items="{/OZPSTA_CFG_TABSTG}">
							<core:Item key="Table" text="{Table}"/>	
						</ComboBox>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="Pivot">
						<ComboBox selectedKey="0" id="pivot" required="true">
							<items>
								<core:Item key="0" text="0 - NÃ£o pivotear"/>
								<core:Item key="1" text="1 - Pivotear"/>
							</items>
						</ComboBox>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button xmlns="sap.m" text="{i18n>btnAdd}" id="btnAdd" press=".onAdd"/>
		</beginButton>
		<endButton>
			<Button xmlns="sap.m" text="{i18n>btnCancel}" id="btnCancelEmpEve" press=".onCancel('EmpEve')"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>