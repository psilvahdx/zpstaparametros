<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" 
    xmlns:smartForm="sap.ui.comp.smartform" xmlns:form="sap.ui.layout.form"
	xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog id="InsertDialogEmpEve" title="{i18n>insertTitle}">
		<content>
			<smartForm:SmartForm id="formEmpEve" editable="true" entityType="ZPSTA_CFG_EMP_EVE">
				<smartForm:Group id="detailGroup">
					<smartForm:GroupElement label="CodigoEmpresa">
						<ComboBox selectedKey="01" id="empresa" required="true">
							<items>
								<core:Item key="01" text="01 - PORTO SEGURO CIA SEGUROS" />
								<core:Item key="14" text="14 - P S VIDA E PREVIDÊNCIA S" />
								<core:Item key="31" text="31 - PORTOMED - SERV SAÚDE" />
								<core:Item key="32" text="32 - PORTO SEGURO ODONTO" />
								<core:Item key="35" text="35 - AZUL COMPANHIA SEG.GERAIS" />
								<core:Item key="50" text="50 - P S - SEGURO SAÚDE S A" />
								<core:Item key="84" text="84 - ITAÚ AUTO E RESIDÊNCIA" />
								<core:Item key="86" text="86 - FUNDACAO SAUDE ITAU" />
							</items>
						</ComboBox>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{CodEveNegocio}" id="evento_negocio"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{DescEveNegocio}" id="descricao_evento_negocio"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="Script">
						<ComboBox selectedKey="{Script}" id="script" required="true">
						</ComboBox>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="Table">
						<ComboBox selectedKey="{Table}" id="table" required="true">
						</ComboBox>
					</smartForm:GroupElement>
					<!-- <smartForm:GroupElement>
						<smartField:SmartField value="{Table}" id="table"/>
					</smartForm:GroupElement> -->
					<smartForm:GroupElement label="Pivot">
						<ComboBox selectedKey="0" id="pivot" required="true">
							<items>
								<core:Item key="0" text="0 - Não pivotear"/>
								<core:Item key="1" text="1 - Pivotear"/>
							</items>
						</ComboBox>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button xmlns="sap.m" text="{i18n>btnAdd}" id="btnAdd" press=".onAdd"/>
		</beginButton>
		<endButton>
			<Button xmlns="sap.m" text="{i18n>btnCancel}" id="btnCancelEmpEve" press=".onCancel('EmpEve')"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>