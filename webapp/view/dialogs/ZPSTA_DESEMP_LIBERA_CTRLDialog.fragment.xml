<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform" xmlns:form="sap.ui.layout.form"
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog id="DialogDesempLibCtrl" title="{i18n>insertTitle}">
		<content>
			<smartForm:SmartForm id="frmDialog" editable="true" entityType="OZPSTA_DESEMP_LIBERA_CTRL">
				<smartForm:Group id="detailGroup">
					<smartForm:GroupElement label="{i18n>CTRL}">
						<smartField:SmartField value="{Ctrl}" id="CTRL" enabled="false"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement tooltip="{i18n>CTRL_VALUE_TOOLTIP}" label="{i18n>CTRL_VALUE_LABEL}">
						<ComboBox id="CTRL_VALUE" selectedKey="{CtrlValue}">
							<core:Item key="NAO" text="NÃƒO"/>
							<core:Item key="SIM" text="SIM"/>
						</ComboBox>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="{i18n>TIPO_CALCULO}">
						<ComboBox id="TIPO_CALCULO" selectedKey="{TipoCalculo}" enabled="{= ${Ctrl}==='RESERVA' || ${Ctrl}=== 'RESSEGURO' ? true : false}">
							<core:Item key="ANTARES" text="ANTARES"/>
							<core:Item key="MISTA" text="MISTA"/>
							<core:Item key="HANA" text="HANA"/>
							<core:Item key="TEMPLATE" text="TEMPLATE"/>
							<core:Item key="ATENA" text="ATENA"/>
						</ComboBox>					
					</smartForm:GroupElement>
					<smartForm:GroupElement label="{i18n>EMP_HANA}">
						<ComboBox id="EMP_HANA" selectedKey="{EmpHana}" enabled="{= ${Ctrl}==='RESERVA' ? true : false}">
							<core:Item key="1" text="1"/>
							<core:Item key="50" text="50"/>
						</ComboBox>						
					</smartForm:GroupElement>
					<smartForm:GroupElement label="{i18n>TIPO_CALCULO_ANT}">
						<smartField:SmartField value="{TipoCalculoAnt}" id="TIPO_CALCULO_ANT" enabled="false"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement label="{i18n>EMP_HANA_ANT}" >
						<smartField:SmartField value="{EmpHanaAnt}" id="EMP_HANA_ANT" enabled="false"/>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button xmlns="sap.m" text="{i18n>btnAdd}" id="btnAdd" press=".onAdd"/>
		</beginButton>
		<endButton>
			<Button xmlns="sap.m" text="{i18n>btnCancel}" id="btnCancel" press=".onCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>