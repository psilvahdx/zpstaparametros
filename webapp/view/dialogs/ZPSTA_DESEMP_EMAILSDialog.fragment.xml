<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform" xmlns:form="sap.ui.layout.form"
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog id="InsertDialog" title="{i18n>insertTitle}">
		<content>
			<smartForm:SmartForm id="formDesEml" editable="true" entityType="OZPSTA_DESEMP_EMAILS">
				<smartForm:Group id="detailGroup">
					<smartForm:GroupElement label="{i18n>EMAIL}">
						<smartField:SmartField value="{Email}" id="Email"/>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button xmlns="sap.m" text="{i18n>btnAdd}" id="btnAdd" press=".onAdd"/>
		</beginButton>
		<endButton>
			<Button xmlns="sap.m" text="{i18n>btnCancel}" id="btnCancel" press=".onCancel('DesEml')"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>