<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform" xmlns:form="sap.ui.layout.form"
	xmlns:smartField="sap.ui.comp.smartfield">
	<Dialog id="InsertDialog" title="{i18n>insertTitle}">
		<content>
			<smartForm:SmartForm id="formDeParEmp" editable="true" entityType="OZPSTA_CFG_DEPARA_EMP">
				<smartForm:Group id="detailGroup">
					<smartForm:GroupElement>
						<smartField:SmartField id="codigo_empresa" value="{CodEmpresa}"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{Descricao}" id="DESC"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{CodCia}" id="COD_CIA"/>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button xmlns="sap.m" text="{i18n>btnAdd}" id="btnAdd" press=".onAdd"/>
		</beginButton>
		<endButton>
			<Button xmlns="sap.m" text="{i18n>btnCancel}" id="btnCancelDeParEmp" press=".onCancel('DeParEmp')"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>